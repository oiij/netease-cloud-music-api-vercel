{
  "name": "netease-cloud-music-api-vercel",
  "type": "commonjs",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "author": "Eiog",
  "license": "MIT",
  "homepage": "https://github.com/Eiog/netease-cloud-music-api-vercel",
  "main": "src/app.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "rimraf dist && tsc --noEmit && tsup",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "update:deps": "taze -w && pnpm i",
    "type:check": "tsc --noEmit",
    "cz": "czg",
    "commit": "git pull && git add -A && pnpm cz && git push",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "NeteaseCloudMusicApi": "^4.28.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.6.1",
    "@eiog/ts-config": "^0.0.3",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.1",
    "@types/ws": "^8.18.1",
    "chalk": "^5.6.2",
    "commitlint": "^20.2.0",
    "consola": "^3.4.2",
    "cz-git": "^1.12.0",
    "czg": "^1.12.0",
    "eslint": "^9.39.1",
    "lint-staged": "^16.2.7",
    "listhen": "^1.9.0",
    "simple-git-hooks": "^2.13.1",
    "taze": "^19.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm type:check"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint:fix"
    ]
  }
}
